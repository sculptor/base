        	«ELSEIF att.isJodaTemporal() -»
    			result.put("«att.getDatabaseName()»", «fw("accessimpl.mongodb." + (att.type == "Date" ? "JodaLocalDate" : "JodaDateTime")  + "Mapper")».getInstance().toData(from.«att.getGetAccessor()»()));
